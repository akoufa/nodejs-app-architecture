{
  "name": "node-architecture-boilerplate",
  "version": "0.2.0",
  "description": "A node boilerplate project showcasing an architecture approach",
  "main": "./src/server.ts",
  "scripts": {
    "debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch-tsc\" \"npm run watch-node\"",
    "start": "NODE_ENV=production npx ts-node src/server.ts",
    "build": "tsc",
    "tsc": "tsc",
    "watch-node": "nodemon ./dist/server.js",
    "watch-tsc": "tsc -w",
    "prettier": "prettier --list-different '**/*.ts'",
    "clean": "rimraf dist",
    "test": "jest",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn lint",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && lint-staged",
      "pre-push": "yarn test"
    }
  },
  "author": "Alex Koufatzis",
  "license": "Apache-2.0",
  "dependencies": {
    "body-parser": "^1.18.0",
    "dotenv": "^4.0.0",
    "express": "4.15.4",
    "mongoose": "^5.3.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.4",
    "@types/mongoose": "^5.2.18",
    "@types/node": "^10.11.4",
    "concurrently": "^4.0.1",
    "husky": "1.1.1",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.0",
    "prettier": "^1.14.0",
    "rimraf": "^2.6.2",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.1"
  }
}
